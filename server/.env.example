# Example environment configuration for cafe-management server
# Copy this file to `.env` and fill in real values before running the server.

NODE_ENV=development
PORT=5000
# Local MongoDB (default development)
MONGODB_URI=mongodb://localhost:27017/cafe_management
# OR MongoDB Atlas (replace placeholders):
# MONGODB_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/<dbname>?retryWrites=true&w=majority

JWT_SECRET=your_super_secret_jwt_key_change_this
JWT_EXPIRE=7d

# Stripe keys (test)
STRIPE_SECRET_KEY=sk_test_your_stripe_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_key

# Email sending (SMTP) credentials
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password

FRONTEND_URL=http://localhost:3000

